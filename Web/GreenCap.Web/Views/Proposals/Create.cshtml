@using GreenCap.Web.ViewModels.InputViewModels
@model ProposalViewModel

@{
    this.ViewData["Title"] = "Create proposal";
}

<div class="jumbotron">
    <h1 class="display-3">Share your innovative ideas!</h1>
    <p class="lead">Tell us your eco friendly idea that will help to make our word greener.</p>
    <hr class="my-4">
    <form method="post">
        <fieldset>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control  col-md-4" placeholder="Title">
                <span asp-validation-for="Title" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control col-md-4">
                <span asp-validation-for="Image" class="text-danger"></span>
                
            </div>

            <div class="form-group">
                <label asp-for="ShortDescription">What is it usel for?</label>
                <input asp-for="ShortDescription" class="form-control" placeholder="Short intro">
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your idea."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-info">Submit</button>
        </fieldset>
    </form>
</div>
