@using GreenCap.Common
@{
    this.ViewData["Title"] = "Create proposal";
}

<div class="jumbotron">
    <h1 class="display-3">Share your innovative ideas!</h1>
    <p class="lead">Tell us your eco friendly idea that will help to make our word greener.</p>
    <hr class="my-4">
    <form>
        <fieldset>
            <div class="form-group">
                <label for="InputTitle">Title</label>
                <input type="text" class="form-control" id="TitleArea" placeholder="Title" name="Title">
            </div>

            <div class="form-group">
                <label for="InputImage">Image</label>
                <input type="text" class="form-control" id="ImageArea" placeholder="Image URL" name="ImageURL">
            </div>

            <div class="form-group">
                <label for="InputShortDescription">What is it usel for?</label>
                <input type="text" class="form-control" id="ShordDescriptionArea" placeholder="Short intro" name="ShortDescription">
            </div>

            <div class="form-group">
                <label for="InputDescription">Description</label>
                <textarea class="form-control" id="DescriptionArea" rows="3" placeholder="Describe your idea." name="Description"></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        </fieldset>
    </form>
</div>
