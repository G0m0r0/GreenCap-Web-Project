@using GreenCap.Web.ViewModels.OutputViewModel
@{
    this.ViewData["Title"] = "Latest news";
}


<div class="jumbotron text-center">
    <h1 class="text-primary display-4">Latest news around the world! <a href="https://phys.org/biology-news/ecology/sort/date/all/" class="alert-link">Click here!</a></h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-lg-12">
            <h6 class="text-muted">All articles</h6>
            <ul class="list-group">
                @foreach (NewsOutputViewModel article in Model)
                {
                    <a href="/News/Details?id=@article" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="image-parent">
                                <img src=@article.SmallPhotoUrl alt="quixote">
                            </div>
                            <div class="flex-column text-info">
                                @article.Title
                                <p><small class="text-muted">@article.Summary </small></p>
                                <!--<span class="badge badge-info badge-pill"> 2 Copies in Stock</span>-->
                            </div>
                    </a>
                }
            </ul>
        </div>
    </div>
</div>