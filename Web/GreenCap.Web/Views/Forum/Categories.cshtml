@using GreenCap.Web.ViewModels.OutputViewModel
@using GreenCap.Data.Models.Enums
@{
    this.ViewData["Title"] = "Forum category " + Model.PageNumber;
}

@model PostsListOutputViewModel

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#general">General</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#health">Health</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#ecology">Ecology</a>
