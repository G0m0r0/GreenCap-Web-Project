</ul>

<div id="myTabContent" class="tab-content">

    <div class="tab-pane fade show active" id="general">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.General.ToString())
            {
                <br />
                <div class="card text-white bg-success active">
                    <div class="card-header" id="@post.Id">
                        <u><a href="/Forum/Details?id=@post.Id" class="text-dark">@post.ProblemTitle</a></u>
                        <button type="button" class="btn btn-danger fas fa-thumbs-down float-right p-xl-2" data-vote="0"><span id="disslikesValue_@(post.Id)">@post.DissLikes</span></button>
                        <button type="button" class="btn btn-success fas fa-thumbs-up float-right p-xl-2" data-vote="1"><span id="likesValue_@(post.Id)">@post.Likes</span></button>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@post.ShortDescription</p>
                        <h4 class="text-dark">
                            @post.CreatorName posted on @post.PostedOn
                            <a class="btn float-right text-dark" href="/Forum/Details?id=@post.Id">
                                <i class="fas fa-info-circle"></i>&nbsp; Comments:&nbsp; @post.CommentsCount
                            </a>
                        </h4>
                    </div>
                </div>
            }
        }
    </div>


