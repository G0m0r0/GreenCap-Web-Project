@using GreenCap.Web.ViewModels.OutputViewModel
@using GreenCap.Data.Models.Enums
@{
    this.ViewData["Title"] = "Forum category ";
}

@model PostsListOutputViewModel

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#general">General</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#health">Health</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#ecology">Ecology</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#exercise">Exercise</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#envirment">Envirment</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#other">Other</a>
    </li>
</ul>

<div id="myTabContent" class="tab-content">

    <div class="tab-pane fade show active" id="general">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.General.ToString())
            {
                <br />
                <div class="card text-white bg-success active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>


    <div class="tab-pane fade" id="health">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.Health.ToString())
            {
                <br />
                <div class="card text-white bg-danger active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>
    <div class="tab-pane fade" id="ecology">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.Ecology.ToString())
            {
                <br />
                <div class="card text-white bg-secondary active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>
    <div class="tab-pane fade" id="exercise">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.Exercise.ToString())
            {
                <br />
                <div class="card text-white bg-warning active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>
    <div class="tab-pane fade" id="envirment">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.Environment.ToString())
            {
                <br />
                <div class="card text-white bg-info active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>
    <div class="tab-pane fade show" id="other">
        @foreach (PostOutputViewModel post in Model.Posts)
        {
            @if (post.CategoryName == Category.Other.ToString())
            {
                <br />
                <div class="card text-white bg-primary active">
                    <partial name="_CategoriesPartial" model="@post" />
                </div>
            }
        }
    </div>
    <br />
</div>

<form method="post" id="antiForgeryForm"></form>

